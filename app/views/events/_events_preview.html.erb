<%= link_to event do %>
<% if event.avatar? %>
<li class="collection-item avatar" style="background: linear-gradient(to right, rgba(255,255,255,1), rgba(255,255,255,0.8), rgba(255,255,255,0)), url(<%= event.avatar.url(:preview) %>) no-repeat;">
<% else %>
    <li class="collection-item avatar" style="background: linear-gradient(to right, rgba(255,255,255,1), rgba(255,255,255,0.8), rgba(255,255,255,0)), url('<%= event.static_map_preview %>') no-repeat;">
        <% end %>
        <% if event.private%>
        <i class="material-icons circle">lock</i>
    <% else %>
        <i class="material-icons circle">lock_open</i>
        <% end %>
        <span class="title"><%= event.name %></span>
        <p>
            <%= event.description %><br/>
            <%= event.start_date %>
            -
            <%= event.finish_date %><br/>
            <%= event.start_location %>
            -
            <%= event.end_location %>
        </p>
        <span class="secondary-content">
            <% if current_user.present? && current_user.events.include?(event) && !current_page?(my_events_path) %>
            <i class="material-icons tooltipped" data-position="bottom" data-delay="50" data-tooltip="You are enrolled">account_circle</i>
            <% end %>
            <% if current_user.present? && event.createdby == current_user.id %>
            <i class="material-icons tooltipped" data-position="bottom" data-delay="50" data-tooltip="You are the creator">grade</i>
            <% end %>
        </span>
    </li>
    <% end %>
