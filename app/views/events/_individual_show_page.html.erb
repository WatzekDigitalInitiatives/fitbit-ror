<div class="col s4 standing brown darken-1 white-text">
  <h5 class="center-align">Overall Standings</h5>
  <div class="">

  </div>
</div>

<% @users.each do |user| %>
  <div class="col s4">
    <div class="card blue-grey darken-1 z-depth-2">
      <div class="card-content white-text">
        <div class="card-avatar">
          <%= image_tag user.avatar.url, :class => 'z-depth-2' %>
        </div>
        <span class="card-title card-name"><%= user.name %></span>
        <div class="clear"></div>
        <hr />
        <p class="stats">
          <i class="material-icons">today</i><b> Date: </b> <%= @date %>
        </p>
        <p class="stats">
          <i class="material-icons">directions_run</i><b> Steps: </b>
          <%= user.steps %>
        </p>
        <p class="stats">
          <% if user.goal_met %>
            <i class="material-icons">local_play</i><b> Goal Achieved: </b> <i class="material-icons">done</i>
          <% else %>
            <i class="material-icons">local_play</i><b> Goal Achieved: </b> <i class="material-icons">clear</i>
          <% end %>
        </p>
      </div>
    </div>
  </div>
<% end %>
