<div class="container">
  <div class="row">

    <div class="col s12">
      <div id="showEventMap" style="height: 500px; background-color: gray;"></div>
      <%= render 'show_event_map' %>
    </div>

    <% @users.each do |user| %>
      <% @activity = Activity.find_by(entry_date: @date, user_id: user.id) %>
      <div class="col s4">
        <div class="card blue-grey darken-1 z-depth-2">
          <div class="card-content white-text">
            <div class="card-avatar">
              <%= image_tag user.avatar.url, :class => 'z-depth-2' %>
            </div>
            <span class="card-title card-name"><%= user.name %></span>
            <div class="clear"></div>
            <hr />
            <p class="stats">
              <i class="material-icons">today</i><b> Date: </b> <%= @date %>
            </p>
            <p class="stats">
              <i class="material-icons">directions_run</i><b> Steps: </b>
              <% if @activity %>
                <%= @activity.steps %>
              <% else %>
                Steps not registered.
              <% end %>
            </p>
            <p class="stats">
              <% if @activity.goal_met %>
                <i class="material-icons">local_play</i><b> Goal Achieved: </b> <i class="material-icons">done</i>
              <% else %>
                <i class="material-icons">local_play</i><b> Goal Achieved: </b> <i class="material-icons">clear</i>
              <% end %>
            </p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
