<script>
    $(document).ready(function () {
        $("#fetch-date").change(function () {
            if ($("#fetch-date").val()) {
                var d = $("#fetch-date").val();
                var link = $("#fetch-date-button").attr('href') + "?date=" + d;
                $("#fetch-date-button").attr('href', link);
            }
        });
    });
</script>
