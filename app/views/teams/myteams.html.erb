<p id="notice"><%= notice %></p>

<%= link_to join_team_path, :class => "btn waves-effect orange black-text" do %>
<i class="material-icons right">directions_walk</i>Join Private Team
<% end %>
<br />
<br />
<%= link_to teams_path, :class => "btn waves-effect orange black-text" do %>
<i class="material-icons right">directions_walk</i>Public Teams
<% end %>

<h1>My Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Private</th>
      <th>Hexcolor</th>
      <th>Invitecode</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @my_teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.private %></td>
        <td><%= team.hexcolor %></td>
        <td><%= team.invitecode %></td>
        <td><%= link_to 'Show', team %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
<%= link_to 'Dashboard', dashboard_path %>
