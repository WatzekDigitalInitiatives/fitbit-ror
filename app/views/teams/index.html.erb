<p id="notice"><%= notice %></p>

<%= link_to join_team_path, :class => "btn waves-effect orange black-text" do %>
<i class="material-icons right">directions_walk</i>Join Private Team
<% end %>
<br />
<br />
<%= link_to my_teams_path, :class => "btn waves-effect orange black-text" do %>
<i class="material-icons right">directions_walk</i>My Teams
<% end %>

<h1>Public Teams</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Private</th>
      <th>Hexcolor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.private %></td>
        <td><%= team.hexcolor %></td>
        <td><%= link_to 'Show', team %></td>
        <% if !team.users.include?(current_user) %>
          <td><%= button_to 'Join', user_teams_create_path, :class => 'join-button', params: { 'invitecode' => team.invitecode } %><td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Team', new_team_path %>
<%= link_to 'Dashboard', dashboard_path %>
