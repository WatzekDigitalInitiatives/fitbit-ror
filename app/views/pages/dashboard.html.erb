<% provide(:title, "Dashboard") %>

<%= render :partial=>"layouts/header" %>

<div class="container">
    <div class="row">
        <div class="profile col s2">
            <%= render :partial=>"layouts/profile", :locals => {:user => @user} %>
            <%= render :partial=>"layouts/events_nav" %>
            <%= render :partial=>"layouts/teams_nav" %>
        </div>
        <div class="feed col s9 offset-s1">
            <div class="feed-title">
                My Dashboard
            </div>
            <div class="card z-depth-2">
                <div class="card-content">
                    <span class="card-title">
                        Today
                    </span>
                    <p>Today's Steps:
                        <%= @steps %>
                    </br>
                    Daily Steps Goal:
                    <%= @goal %>
                </p>
            </div>
        </div>
        <div class="card z-depth-2">
            <div class="card-content">
                <span class="card-title">
                    Messages
                </span>
                <p>No messages.</p>
            </div>
        </div>
        <div class="card z-depth-2">
            <div class="card-content">
                <span class="card-title">
                    My Badges
                </span>
                <%= render :partial=>"pages/badges" %>
            </div>
        </div>
        <div class="card z-depth-2">
            <div class="card-content">
                <span class="card-title">
                    All Data
                </span>
                <pre>
                    <%= JSON.pretty_generate(@info) %>
                </pre>
            </div>
        </div>
    </div>
</div>
</div>
</div>
