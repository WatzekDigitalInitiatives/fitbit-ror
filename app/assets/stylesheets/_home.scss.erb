.home {
  position: absolute;
  margin: 0;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-image: image-url("runners.jpg");
  background-size: cover;
  filter: blur(5px);
  -webkit-filter: blur(5px);
  -moz-filter: blur(5px);
  -o-filter: blur(5px);
  -ms-filter: blur(5px);
  transform: scale(1.15);
}

.message {
  left: 50%;
  position: absolute;
  text-align: center;
  top: 50%;
  transform: translate(-50%, -50%);

  a,
  i {
    font-size: 2rem;
  }

  .brand {
    text-shadow: 3px 3px black;
    color: orange;
    padding-bottom: 8rem;
    font-weight: bold;
    font-style: italic;
    font-variant: small-caps;
    font-size: 12rem;
  }

  .btn {
    margin: 0 10px;
  }
}
